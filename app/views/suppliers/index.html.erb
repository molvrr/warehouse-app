<section id="suppliers">
  <h2>Fornecedores</h2>
  <div>
    <%= link_to 'Cadastrar Fornecedor', new_supplier_path %>
  </div>
  <% if @suppliers.any? %>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Localização</th>
        </tr>
      </thead>
      <tbody>
        <% @suppliers.each do |s| %>
          <tr>
            <td><%= s.trade_name %></td>
            <td><%= s.city %> - <%= s.state %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Não existem fornecedores cadastrados.</p>
  <% end %>
</section>
